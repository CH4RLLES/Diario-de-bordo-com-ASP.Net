@model DiarioDeBordo.Aplicacao.Models.Diario.TiposAtividadesModel

@{
    ViewData["Title"] = "Tipos Atividades";
    Layout = "~/Views/Shared/_LayoutDiario.cshtml";
    var dados = TempData["Usuario"] as UsuarioLogado;
}
<br />
<h1>Tipos Atividades</h1>

<div class="row">
    <div class="col-md-6">
        <h1>Cadastrar Tipo Atividade</h1>
    </div>
    <div class="col-md-6 text-md-right">
        <label><i class="fa fa-user"></i> @dados.Nome.CapitalizarNome()</label>
    </div>
</div>

<br />
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default shadow-lg p-3 mb-5 bg-white rounded">
            <div class="panel-body">
                <form asp-action="TiposAtividades">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (TempData["Messagem"] != null)
                    {
                        <p class="alert alert-info">@TempData["Messagem"]</p>
                    }
                    <div class="form-group">
                        <label asp-for="DadosTipoAtividade.Descricao" class="control-label"></label>
                        <input asp-for="DadosTipoAtividade.Descricao" class="form-control" />
                        <span asp-validation-for="DadosTipoAtividade.Descricao" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="DadosTipoAtividade.Id" class="form-control" />
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DadosTipoAtividade.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaTiposAtividades)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="BuscarTipoAtividade" asp-route-id="@item.Id" class="fa fa-pencil"></a>
                </td>
            </tr>
        }
    </tbody>
</table>

