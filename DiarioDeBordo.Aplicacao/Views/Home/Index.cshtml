@model DiarioDeBordo.Dominio.Models.LoginDTO
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            @if (TempData["LoginUsuarioFalhou"] != null)
            {
                <p class="alert alert-danger">@TempData["LoginUsuarioFalhou"]</p>
            }
            <form asp-controller="Login" asp-action="Login" class="login100-form validate-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <span class="login100-form-title p-b-26">
                    <img src="~/img/Diario BordoImagem.jpg" width="260px" />
                </span>
                <span class="login100-form-title p-b-48">
                    <i class="zmdi zmdi-font"></i>
                </span>
                <div class="wrap-input100 validate-input">
                    <input asp-for="Cpf" class="input100" required oninvalid="this.setCustomValidity('CPF é obrigatório')" oninput="this.setCustomValidity('')">
                    <span asp-validation-for="Cpf" class="focus-input100" data-placeholder="CPF"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    <span class="btn-show-pass">
                        <i class="zmdi zmdi-eye"></i>
                    </span>
                    <input asp-for="Senha" type="password" class="input100" required oninvalid="this.setCustomValidity('Senha é obrigatório')" oninput="this.setCustomValidity('')">
                    <span asp-validation-for="Senha" class="focus-input100" data-placeholder="Senha"></span>
                </div>
                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn">
                            Entrar
                        </button>
                    </div>
                </div>
                <div class="text-center p-t-115">
                    <span class="txt1">
                        <img src="~/img/logo_quadrado.png" width="35px"/>
                    </span>
                    <a class="txt2" href="#">
                        2019 - Consórcio CPT
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

